import os
dir_home = "/home/anzal/Documents/Work/python"
os.chdir(dir_home)

extension = 'atf'

file_list = []
for root, dirs, files in os.walk("./", topdown = False):
   for name in files:
       if name.endswith('.' + extension):
           file_list.append(os.path.join(root, name))


import pandas as pd

df = pd.read_table(file_list[0])
traces = df[8:]

import scipy
peaks_index = scipy.signal.find_peaks(traces['1'])
